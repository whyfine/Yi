
@{
    ViewBag.Title = "Channel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main1" style="width: 1000px;height:400px;"></div>
<script type="text/javascript">
    // 基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('main1'));

    // 指定图表的配置项和数据
    var option = {
        title: {
            text: '昨日分类销售图'
        },
        tooltip: {},
        legend: {
            data: ['分类销售图']
        },
        series: [{
            name: '分类销售图',
            type: 'pie',
            radius: '55%',
            data: [
                { value: 35, name: '洗护用户' },
                { value: 274, name: '食品生鲜' },
                { value: 10, name: '家电产品' },
                { value: 335, name: '数码产品' },
                { value: 40, name: '酒水产品' }
            ]
        }]
    };

    // 使用刚指定的配置项和数据显示图表。
    myChart.setOption(option);
</script>